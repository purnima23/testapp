<div class="well">

  <div class="row"> 
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
        <h6 class="text-left">Days Before Expiry: <span style="color: green"><%= product.days_before_expired %></span><br><%= product.user.user_detail.address %></h6>

    </div>
    <div class="col-xs-4">
      <h4 class="text-right">RM <%= product.price %></h4>
      <%= form_for order_item, remote: true do |f| %>
        <div class="input-group">
        <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>